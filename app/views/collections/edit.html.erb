<h1>Edit Collection <%= @collection.name %></h1>

<%= form_for @collection, url: update_collection_path(collection_id: @collection.id) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </div>

  <div class="field">
    <%= f.label :categories %>
    <%= f.text_field :categories %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if @collection.is_root? %>
  <%= link_to 'Back', root_path %>
<% else %>
  <%= link_to 'Back', collection_path(@collection) %>
<% end %>
