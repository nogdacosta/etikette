<div class="etikkete-wrapper container-fluid devise-page bg-light">
  <div class="col-md-4">
    <div class="card card-block">
      <h4 class="card-title">Forgot your password?</h4>
      <% if !flash.blank? %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <fieldset class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
        </fieldset>

        <div class="actions form-group">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
